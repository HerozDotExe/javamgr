{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "declaration": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}